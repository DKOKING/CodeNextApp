<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Code Next"
        android:textSize="30dp"
        android:textColor="#04A4F5"
        app:fontFamily="@font/concert_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/codeNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:onClick="info"
        android:shadowColor="#00FFFFFF"
        android:text="What Is Code Next?"
        android:textSize="20dp"
        android:textColor="#04A4F5"
        app:fontFamily="@font/concert_one"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:onClick="info"
        android:shadowColor="#00FFFFFF"
        android:text="Where are we?"
        android:textSize="20dp"
        android:textColor="#04A4F5"
        app:fontFamily="@font/concert_one"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="313dp"
        android:background="#F8F2F2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#04A4F5"
            android:onClick="Team"
            android:text="Our Team"
            android:textColor="#F5EFEF"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="210dp" />

        <Button
            android:id="@+id/programs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#04A4F5"
            android:onClick="Program"
            android:text="Programs We Offer"
            android:textColor="#F5EFEF"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#04A4F5"
            android:text="Events"
            android:textColor="#F5EFEF"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="542dp" />

    </LinearLayout>

    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F70404"
        android:onClick="Login"
        android:text="Apply Now"
        android:textColor="#F5EFEF"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Get Updated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_marginBottom="36dp"
        android:background="#F8F3F3"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apply"
        app:srcCompat="@drawable/codenext" />


</androidx.constraintlayout.widget.ConstraintLayout>